<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#449def" />
            <stroke
                android:width="1dp"
                android:color="#2f6699" />
            <corners
                android:radius="9dp" />
            <padding
                android:left="11dp"

                android:right="11dp"
               />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#4099FF"
                android:endColor="#4099FF"
                android:angle="270" />

            <corners
                android:radius="9dp" />
            <padding
                android:left="11dp"

                android:right="11dp"
                />
        </shape>
    </item>
</selector>