<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#be4d66" />
            <stroke
                android:width="1dp"
                android:color="#be4d66" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="40dp"
                android:top="14dp"
                android:right="40dp"
                android:bottom="14dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:endColor="#ffffff"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="40dp"
                android:top="14dp"
                android:right="40dp"
                android:bottom="14dp" />
        </shape>
    </item>
</selector>