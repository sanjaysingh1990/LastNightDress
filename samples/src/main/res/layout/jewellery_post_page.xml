                            android:id="@+id/size4"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="2.5"
                            android:textColor="#fff"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:id="@+id/size5"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="3"
                            android:textColor="#fff"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:id="@+id/size6"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
