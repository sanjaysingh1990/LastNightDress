<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            style="@style/InfoHeadingTextView"
            android:text="How to calculate dimensional weight?" />

        <TextView
            style="@style/InfoTextView"
            android:layout_marginTop="2dp"
            android:text="@string/shipping_page4_text1" />

        <TextView
            style="@style/InfoTextView"
            android:layout_marginTop="8dp"
            android:text="@string/shipping_page4_text2" />

        <TextView
            style="@style/InfoTextView"
            android:layout_marginTop="8dp"
            android:text="@string/shipping_page4_text3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:src="@drawable/shipping_calculate_weight_image" />

        <TextView
            style="@style/InfoTextView"
            android:layout_marginTop="8dp"
            android:text="@string/shipping_page4_text4" />

        <TextView
            style="@style/InfoTextView"
            android:layout_marginTop="8dp"
            android:text="@string/shipping_page4_text5" />
        <TextView
            style="@style/InfoHeadingTextView"
            android:text="How to avoid dimensional weight charges"
            android:layout_marginTop="8dp"
            />
        <TextView
            style="@style/InfoTextView"
            android:layout_marginTop="2dp"
            android:text="@string/shipping_page4_text6" />
        <TextView
            style="@style/InfoTextView"
            android:layout_marginTop="6dp"
            android:text="@string/shipping_page4_text7" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </LinearLayout>
</ScrollView>