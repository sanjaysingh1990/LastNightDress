<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            style="@style/InfoHeadingTextView"
            android:text="Demotic and International shipping" />

        <TextView
            style="@style/InfoTextView"
            android:layout_marginTop="2dp"
            android:text="@string/shipping_info_page2_text6" />

        <TextView
            style="@style/InfoTextView"
            android:layout_marginTop="2dp"
            android:text="@string/shipping_info_page2_text7" />

        <TextView
            style="@style/InfoHeadingTextView"
            android:layout_marginTop="10dp"
            android:text="Steps to take when you made a sale" />

        <TextView
            style="@style/InfostepsTextView"
            android:layout_marginTop="10dp"
            android:text="@string/sale_step1" />

        <TextView
            style="@style/InfoTextView"
            android:layout_marginTop="2dp"
            android:text="@string/shipping_step1_text" />

        <TextView
            style="@style/InfostepsTextView"
            android:layout_marginTop="10dp"
            android:text="@string/sale_step2" />

        <TextView
            style="@style/InfoTextView"
            android:layout_marginTop="2dp"
            android:text="@string/shipping_step2_text" />

        <TextView
            style="@style/InfostepsTextView"
            android:layout_marginTop="10dp"
            android:text="@string/sale_step3" />

        <TextView
            style="@style/InfoTextView"
            android:layout_marginTop="2dp"
            android:text="@string/shipping_step3_text" />

        <TextView
            style="@style/InfostepsTextView"
            android:layout_marginTop="10dp"
            android:text="@string/sale_step4" />

        <TextView
            style="@style/InfoTextView"
            android:layout_marginTop="2dp"
            android:text="@string/shipping_step4_text" />

        <TextView
            style="@style/InfostepsTextView"
            android:layout_marginTop="10dp"
            android:text="@string/sale_step5" />

        <TextView
            style="@style/InfoTextView"
            android:layout_marginTop="2dp"
            android:text="@string/shipping_step5_text" />
    </LinearLayout>
</ScrollView>