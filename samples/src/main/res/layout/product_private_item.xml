<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff"


    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <com.eowise.recyclerview.stickyheaders.samples.StickyHeader.HomeImageSliderLayout
                android:id="@+id/switcher"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scrollbars="none">

            </com.eowise.recyclerview.stickyheaders.samples.StickyHeader.HomeImageSliderLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#dadada"

                />
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_forward"
            android:id="@+id/forward"
            android:layout_gravity="center_vertical|right"
            android:background="?attr/selectableItemBackground"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_backward"
            android:id="@+id/backward"
            android:layout_gravity="center_vertical|left"
            android:background="?attr/selectableItemBackground"
            />
        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fullpostloading"
            android:layout_gravity="center_vertical|center_horizontal"
            />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$600"
                android:textColor="#b4b4b4"
                android:textSize="16sp"
                android:id="@+id/pricewas"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$400"
                android:layout_marginLeft="6dp"
                android:textColor="#be4d66"
                android:textSize="16sp"
                android:id="@+id/pricenow"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_gravity="center_vertical"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                >
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/message_to_user"
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/messagetouser"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/favorite_icon"
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/favorate"
                    android:layout_marginLeft="16dp"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/forward_to_friend_icon"
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/sendto"
                    android:layout_marginLeft="16dp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#dadada"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"


            android:layout_gravity="center_vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#be4d66"
                android:text="9 of 10"
                android:textSize="13sp"
                android:id="@+id/condition"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#dadada"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"



            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#be4d66"
                android:text="S"
                android:gravity="center_horizontal"
                android:textSize="13sp"
                android:id="@+id/len"
                />

        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#dadada"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"


            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#be4d66"
                android:text="Pattern"
                android:gravity="center_horizontal"
                android:textSize="13sp"
                android:layout_gravity="center_horizontal"

                android:id="@+id/color"

                />


        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dadada"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#be4d66"
            android:clickable="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy"
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:padding="8dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/shop_icon2"
                android:gravity="center_vertical"
                android:clickable="true"
                android:id="@+id/buy"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#be4d66"
            android:layout_marginLeft="1dp"
            >



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swap"
                android:id="@+id/swap"
                android:textColor="#fff"
                android:padding="8dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/exchange_icon"
                android:gravity="center_vertical"
                android:clickable="true"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="124 likes"
            android:id="@+id/likescount"
            android:textColor="#be4d66"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/total_liked_icon"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:clickable="true"
            />

        <com.eowise.recyclerview.stickyheaders.samples.Utils.RelativeTimeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="4m"
            android:textSize="14sp"
            android:textColor="#b4b4b4"
            android:layout_alignParentRight="true"
            android:id="@+id/time"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping :"
            android:textColor="#be4d66"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="$15"
            android:id="@+id/shipping"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <github.ankushsachdeva.emojicon.EmojiconTextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:emojicon="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        emojicon:emojiconSize="18sp"
        android:id="@+id/desc"
        android:paddingLeft="14dp"
        android:paddingRight="10dp"
        android:layout_marginTop="5dp"
        android:clickable="true"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:clickable="true"

            android:gravity="center_vertical"
            android:text="Comment"
            android:textColor="#b4b4b4" />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/comment_lock_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/commenttextview"
        android:gravity="left"
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:lineSpacingMultiplier="1.3"
        android:layout_marginLeft="15dp"

        />
    <TextView
        android:id="@+id/viewallcomments"
        android:gravity="left"
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-10dp"
        android:clickable="true"
        />
<View
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/white"
    android:id="@+id/space"
    />
</LinearLayout>
