<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/header"
        android:background="@color/white"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/AppTheme.PopupOverlay"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Post"

                    android:textColor="#000"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="back"
                    android:src="@drawable/back_arrow"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="#dadada" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#dadada" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#222427"
        android:scrollbars="none"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:paddingLeft="4dp"
                android:paddingTop="6dp"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    >

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="150px"

                        android:layout_height="150px"
                        android:layout_centerInParent="true"
                        android:background="#222427"
                        android:clickable="true"
                        android:scaleType="centerCrop" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    >

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="150px"

                        android:layout_height="150px"
                        android:layout_centerInParent="true"
                        android:background="#222427"
                        android:clickable="true"
                        android:scaleType="centerCrop"

                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    >

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="150px"

                        android:layout_height="150px"
                        android:layout_centerInParent="true"
                        android:background="#222427"
                        android:clickable="true"
                        android:scaleType="centerCrop"

                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    >

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="150px"

                        android:layout_height="150px"
                        android:layout_centerInParent="true"
                        android:background="#222427"
                        android:clickable="true"
                        android:scaleType="centerCrop"

                        />
                </RelativeLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:hint="Brand"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="@color/gray"
                android:textSize="15sp"

                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="#dadada" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/emoji_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="instruction"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/smiley" />

                <MultiAutoCompleteTextView
                    android:id="@+id/autocomplete"
                    style="@style/AutocompleteEditText"

                    />

                <ImageButton
                    android:id="@+id/instruction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="instruction"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/info_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:text="Price"
                    android:textColor="@color/heading" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/post_item_back_color"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/pricewas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_horizontal"
                        android:hint="Was"
                        android:inputType="numberDecimal"
                        android:textColor="#fff"
                        android:textColorHint="@color/gray"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/pricenow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_horizontal"
                        android:hint="Now"
                        android:inputType="numberDecimal"
                        android:textColor="#fff"
                        android:textColorHint="#dadada"
                        android:textSize="15sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/infoview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/earnings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Your earnings: C$00 "
                        android:textColor="@color/heading" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:onClick="priceins"
                        android:src="@drawable/info_icon" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Size"
                    android:textColor="@color/heading" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#1d1f21"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/size1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/checkbox_background_selector"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:tag="2xs"
                            android:text="2XS"
                            android:textColor="#fff" />

                        <CheckBox
                            android:id="@+id/size2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/checkbox_background_selector"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:tag="xs"
                            android:text="XS"
                            android:textColor="#fff" />

                        <CheckBox
                            android:id="@+id/size3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/checkbox_background_selector"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:tag="s"
                            android:text="S"
                            android:textColor="#fff" />

                        <CheckBox
                            android:id="@+id/size4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/checkbox_background_selector"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:tag="m"
                            android:text="M"
                            android:textColor="#fff" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/size5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/checkbox_background_selector"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:tag="l"
                            android:text="L"
                            android:textColor="#fff" />

                        <CheckBox
                            android:id="@+id/size6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/checkbox_background_selector"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:tag="xl"
                            android:text="XL"
                            android:textColor="#fff" />

                        <CheckBox
                            android:id="@+id/size7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/checkbox_background_selector"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:tag="2xl"
                            android:text="2XL"
                            android:textColor="#fff" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#222427" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#1d1f21"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/numsize1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/checkbox_background_selector"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:tag="00"
                            android:text="00"
                            android:textColor="#fff" />

                        <CheckBox
                            android:id="@+id/numsize2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/checkbox_background_selector"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:tag="0"
                            android:text="0"
                            android:textColor="#fff" />

                        <CheckBox
                            android:id="@+id/numsize3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/checkbox_background_selector"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:tag="2"
                            android:text="2"
                            android:textColor="#fff" />

                        <CheckBox
                            android:id="@+id/numsize4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/checkbox_background_selector"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:tag="4"
                            android:text="4"
                            android:textColor="#fff" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/numsize5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/checkbox_background_selector"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:tag="6"
                            android:text="6"
                            android:textColor="#fff" />

                        <CheckBox
                            android:id="@+id/numsize6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/checkbox_background_selector"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:tag="8"
                            android:text="8"
                            android:textColor="#fff" />
                        7

                        <CheckBox
                            android:id="@+id/numsize7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/checkbox_background_selector"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:tag="10"
                            android:text="10"
                            android:textColor="#fff" />

                        <CheckBox
                            android:id="@+id/numsize8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/checkbox_background_selector"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:tag="12"
                            android:text="12"
                            android:textColor="#fff" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/numsize9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/checkbox_background_selector"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:tag="14"
                            android:text="14"
                            android:textColor="#fff" />

                        <CheckBox
                            android:id="@+id/numsize10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/checkbox_background_selector"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:tag="16"
                            android:text="16"
                            android:textColor="#fff" />

                        <CheckBox
                            android:id="@+id/numsize11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/checkbox_background_selector"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:tag="18"
                            android:text="18"
                            android:textColor="#fff" />

                        <CheckBox
                            android:id="@+id/numsize12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/checkbox_background_selector"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:tag="19"
                            android:text="19"
                            android:textColor="#fff" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Dress Type"
                    android:textColor="@color/heading" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#1d1f21"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/dresstype1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/checkbox_background_selector"
                        android:button="@null"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:tag="1"
                        android:text="Evening\nDress"
                        android:textColor="#fff" />


                    <CheckBox
                        android:id="@+id/dresstype2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/checkbox_background_selector"
                        android:button="@null"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:tag="2"
                        android:text="Cocktail\nand Party"
                        android:textColor="#fff" />


                    <CheckBox
                        android:id="@+id/dresstype3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/checkbox_background_selector"
                        android:button="@null"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:tag="3"
                        android:text="Wedding\nDress"
                        android:textColor="#fff" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1d1f21"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/dresstype4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/checkbox_background_selector"
                        android:button="@null"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:tag="4"
                        android:text="Causal\nDress"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/dresstypeall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#222427"
                        android:gravity="center_horizontal|center_vertical"
                        android:padding="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#222427"
                        android:gravity="center_horizontal"
                        android:padding="10dp" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Condition"
                    android:textColor="@color/heading"

                    />


                <CheckBox
                    android:id="@+id/lastnightdress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/checkbox_background_selector"
                    android:button="@null"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:tag="12"
                    android:text="Last Night's Dress"
                    android:textColor="#fff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1d1f21"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/conditionspinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#1d1f21"
                        android:entries="@array/condition"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:textColor="#fff"
                        android:theme="@style/myspinnerstyle" />


                    <CheckBox
                        android:id="@+id/conditionnew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/checkbox_background_selector"
                        android:button="@null"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:tag="11"
                        android:text="New"
                        android:textColor="#fff" />
                </LinearLayout>

                <TextView
                    android:id="@+id/lndconditontext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/heading" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Business"
                    android:textColor="@color/heading"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#1d1f21"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/business1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:text="Private"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/business2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:text="Shop"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/businessall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:text="All"
                        android:textColor="#fff" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Color"
                    android:textColor="@color/heading" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#1d1f21"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/color1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/checkbox_background_selector"
                            android:button="@null"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:tag="black"
                            android:text="Black"
                            android:textColor="#fff"


                            />

                        <CheckBox
                            android:id="@+id/color2"
                            android:layout_width="match_parent"
