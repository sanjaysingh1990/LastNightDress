<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <FrameLayout
        android:id="@+id/fl_camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/fl_switch_camera_font_or_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:background="#222427"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            >
            <ImageButton
                android:id="@+id/ibtn_close"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:src="@drawable/cancel_icon"
                android:layout_gravity="center_vertical|bottom"
                android:background="?attr/selectableItemBackground"
                />



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/ll_elapse_time"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:background="@android:color/black"
                android:visibility="invisible">

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                     />

                <TextView
                    android:id="@+id/tv_elapse_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="00:00"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <ImageView
               android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/post_next"
                android:layout_alignParentRight="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_weight="0"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
          android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"

        android:background="@color/black">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="3dp"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:id="@+id/fl_take_photo_or_record_video"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frame1"
                android:layout_centerInParent="true"
                android:background="@drawable/rounded_corners_image"

                >

                <ImageView
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:id="@+id/image1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"

                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/close_favorate"
                    android:layout_centerInParent="true"
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/cancel1"
                    android:layout_gravity="top|right"

                    android:visibility="gone"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_image"
                    android:background="?attr/selectableItemBackground"

                    android:id="@+id/add1"
                    android:layout_gravity="center_horizontal|center_vertical"

                    />
            </FrameLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/frame2"
                    android:background="@drawable/rounded_corners_image"
                    >

                    <ImageView
                        android:layout_width="150px"
                        android:layout_height="150px"

                        android:layout_gravity="center_horizontal|center_vertical"
                        android:id="@+id/image2"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/close_favorate"
                        android:layout_centerInParent="true"
                        android:background="?attr/selectableItemBackground"
                        android:id="@+id/cancel2"
                        android:layout_gravity="top|right"
                        android:visibility="gone"
                        />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_image"
                        android:id="@+id/add2"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:background="?attr/selectableItemBackground"
                        />

                </FrameLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/frame3"
                    android:background="@drawable/rounded_corners_image"
                    >

                    <ImageView
                        android:layout_width="150px"
                        android:layout_height="150px"

                        android:layout_gravity="center_horizontal|center_vertical"
                        android:id="@+id/image3"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/close_favorate"
                        android:layout_centerInParent="true"
                        android:background="?attr/selectableItemBackground"
                        android:id="@+id/cancel3"
                        android:layout_gravity="top|right"
                        android:visibility="gone"
                        />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_image"

                        android:background="?attr/selectableItemBackground"
                        android:id="@+id/add3"
                        android:layout_gravity="center_horizontal|center_vertical"
                        />
                </FrameLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/frame4"
                    android:background="@drawable/rounded_corners_image"
                    >

                    <ImageView
                        android:layout_width="150px"
                        android:layout_height="150px"

                        android:layout_gravity="center_horizontal|center_vertical"
                        android:id="@+id/image4"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/close_favorate"
                        android:layout_centerInParent="true"
                        android:background="?attr/selectableItemBackground"
                        android:id="@+id/cancel4"
                        android:layout_gravity="top|right"
                        android:visibility="gone"
                        />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_image"

                        android:background="?attr/selectableItemBackground"
                        android:id="@+id/add4"
                        android:layout_gravity="center_horizontal|center_vertical"
                        />
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"


                >

            <LinearLayout
              android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight="1">


                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:layout_gravity="center_vertical"

                     >
                     <ImageView
                         android:id="@+id/showimg"
                         android:layout_width="90px"
                         android:layout_height="90px"
                         android:src="@drawable/image1"
                         android:adjustViewBounds="true"
                         android:layout_centerVertical="true"
                         android:layout_alignParentLeft="true"
                         android:layout_marginLeft="20dp"
                         />
                 </RelativeLayout>
                <ImageButton
                    android:id="@+id/ibtn_switch_take_photo_or_record_video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:visibility="gone"
                    />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <RelativeLayout
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/capture_button_outer_circle"
                    android:layout_centerInParent="true"
                    >

                    <ImageButton
                        android:id="@+id/ibtn_take_photo_or_record_video"
                        android:layout_height="45dp"
                        android:layout_width="45dp"
                       android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                      android:background="@drawable/capture_button_click"


                        />

                </RelativeLayout>
                            </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    >
                    <ImageButton
                        android:id="@+id/camera_flash"
                       android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/flash_off"
                        android:layout_gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        />

                    <ImageButton
                    android:id="@+id/ibtn_switch_back_or_front_camera"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/switch_camera" />
                </LinearLayout>
            </LinearLayout>
</LinearLayout>
    </FrameLayout>

</FrameLayout>