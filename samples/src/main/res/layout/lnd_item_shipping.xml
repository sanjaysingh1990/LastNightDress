                style="@style/LnditemshipTextView"
                android:layout_marginTop="10dp"
                android:text="Service"

                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
