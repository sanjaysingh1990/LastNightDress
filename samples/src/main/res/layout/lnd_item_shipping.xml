<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            style="@style/LnditemshipTextView"
            android:text="How will you shp it?" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/actualcost1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/checkbox_background_selector2"
                android:button="@null"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:text="charge actual cost"
                android:textColor="#757575"

                />

            <CheckBox
                android:id="@+id/fixedcost1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/checkbox_background_selector2"
                android:button="@null"
                android:checked="true"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:text="charge a fixed cost"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- service block -->
        <LinearLayout
            android:id="@+id/chargefixedcost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                style="@style/LnditemshipTextView"
                android:layout_marginTop="10dp"
                android:text="Service" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/purchse_rounded_corners"
                    android:entries="@array/service"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"></Spinner>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/down_arrow"

                    />
            </FrameLayout>
            <!-- cost block -->
            <TextView

                style="@style/LnditemshipTextView"
                android:layout_marginTop="10dp"
                android:text="Cost"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/purchse_rounded_corners"
                    android:hint="US $"
                    android:paddingBottom="11dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="11dp"
                    android:textSize="12sp" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0" />

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:button="@drawable/checkbox_selector"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    android:text="Offer free shipping"
                    android:textColor="@color/white"
                    android:textSize="15sp" />


            </LinearLayout>
        </LinearLayout>

        <!-- charge acuatal cost views -->
        <LinearLayout
            android:id="@+id/chargeactualcost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <TextView

                style="@style/LnditemshipTextView"
                android:layout_marginTop="10dp"
                android:text="Weight of packaged item" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/purchse_rounded_corners"
                    android:entries="@array/weight"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"></Spinner>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/down_arrow"

                    />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        style="@style/LnditemshipTextView"
                        android:text="Length" />


                    <EditText
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/purchse_rounded_corners"
                        android:paddingBottom="9dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="9dp"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="cm.x"
                    android:textColor="@color/heading"
                    android:textSize="11sp" />
                <!-- width-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/LnditemshipTextView"
                        android:text="Width" />

                    <EditText
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/purchse_rounded_corners"
                        android:paddingBottom="9dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="9dp"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="cm.x"
                    android:textColor="@color/heading"
                    android:textSize="11sp" />
                <!-- height -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        style="@style/LnditemshipTextView"
                        android:text="Height" />

                    <EditText
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/purchse_rounded_corners"
                        android:paddingBottom="9dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="9dp"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <TextView

                style="@style/LnditemshipTextView"
                android:layout_marginTop="10dp"
                android:text="Service"

                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/purchse_rounded_corners"
                    android:entries="@array/service"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"></Spinner>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/down_arrow"

                    />
            </FrameLayout>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="Offer free shipping"
                android:textColor="#757575"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- actual cost layout end here -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#757575" />
        <!-- internatonal -->
        <TextView

            style="@style/LnditemshipTextView"
            android:layout_marginTop="10dp"
            android:text="Internatonal(Optional)"

            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/actualcost2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/checkbox_background_selector2"
                android:button="@null"
                android:checked="true"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:text="charge actual cost"
                android:textColor="#ffffff"

                />

            <CheckBox
                android:id="@+id/fixedcost2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/checkbox_background_selector2"
                android:button="@null"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:text="charge a fixed cost"
                android:textColor="#757575" />

        </LinearLayout>
        <!-- item weight package -->
