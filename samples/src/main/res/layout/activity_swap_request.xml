<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eowise.recyclerview.stickyheaders.samples.LndSwapRequestResponse.SwapRequestActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/header"
        android:background="@color/white"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"

        >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Swap with Cindy Lowe"
                    android:textColor="#000"
                    android:textSize="18sp"

                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_arrow"
                    android:layout_weight="0"
                    android:layout_gravity="center_vertical|left"
                    android:background="?attr/selectableItemBackground"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/back"
                    android:onClick="back"

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dadada"
                    android:layout_gravity="bottom" />
            </FrameLayout>

    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/white"
        android:layout_weight="1"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_gravity="bottom"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Swap"
            android:textColor="#b4b4b4"
            android:background="#e8e9eb"
            android:gravity="center"
            android:padding="12dp"
            android:id="@+id/swap"
            android:textSize="16sp"
            android:clickable="true"

           />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="No Thanks"
            android:textColor="#be4d66"
            android:background="#e8e9eb"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginLeft="1dp"
            android:textSize="16sp"
            android:clickable="true"
            android:id="@+id/nothanks"
            />




    </LinearLayout>

</LinearLayout>
